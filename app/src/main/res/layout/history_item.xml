<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <ImageView
        android:id="@+id/restaurantImgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/history_restaurantNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="식당 이름"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/restaurantImgView" />

    <TextView
        android:id="@+id/history_restaurantDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="방문 날짜"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/restaurantImgView"
        app:layout_constraintTop_toBottomOf="@id/history_restaurantNameTv" />

</androidx.constraintlayout.widget.ConstraintLayout>